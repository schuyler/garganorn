{
    "lexicon": 1,
    "id": "info.schuyler.location.nearest",
    "defs": {
        "main": {
            "type": "query",
            "description": "Find the nearest locations to a given latitude and longitude",
            "parameters": {
                "type": "params",
                "required": [
                    "latitude",
                    "longitude"
                ],
                "properties": {
                    "latitude": { "type": "string" },
                    "longitude": { "type": "string" }
                }
            },
            "output": {
                "description": "The nearest locations to the given latitude and longitude, with distance in meters",
                "encoding": "application/json",
                "schema": {
                    "type": "object",
                    "required": [
                        "locations"
                    ],
                    "properties": {
                        "nearest": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "required": [
                                    "location"
                                ],
                                "properties": {
                                    "location": {
                                        "type": "union",
                                        "refs": [
                                            "community.lexicon.geo.location"
                                        ]
                                    },
                                    "distance_m": {
                                        "type": "integer"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "errors": [
                {"name": "invalid_coordinates", "description": "Latitude and/or longitude are missing or invalid"}
            ]
        }
    }
}